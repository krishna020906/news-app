{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "app/components/MainPage.jsx", "app/components/SearchBar.jsx", "app/components/FilterChips.jsx", "app/components/ArticleCard.jsx", "app/components/BiasMeter.jsx", "app/components/Recommendation.jsx", "app/components/MobileNav.jsx", "app/components/ArticleModal.jsx", "app/components/Header.jsx"  ],
  "exclude": ["node_modules"]
}
